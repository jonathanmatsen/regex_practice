#search for mentions within hacker news dataset

import re

titles = hn["title"].tolist()

python_mentions = 0

pattern = "[Pp]ython"

for title in titles:
    if re.search(pattern, title):
        python_mentions += 1

#use vectorized method to accomplish above

pattern = '[Pp]ython'

titles = hn['title']

python_mentions = titles.str.contains(pattern).sum()

